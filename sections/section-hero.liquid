{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-hero">
  <div class="section-inner">
    {% if section.settings.image != blank %}
    <div class="section-image">
      <img src="{{ section.settings.image | img_url: 'master' }}" alt="">
      <h2 class="section-title title-mobile">{{ section.settings.title }}</h2>
    </div>
    {% endif %}

    <div class="section-content">
      <h2 class="section-title title-desktop">{{ section.settings.title }}</h2>
      <div class="section-descr">{{ section.settings.descr }}</div>

      {% if section.settings.btn_text != blank %}
      <div class="section-button-wrapper">
        <a href="{{ section.settings.btn_url }}" class="section-btn">{{ section.settings.btn_text }}</a>
      </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "descr",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
