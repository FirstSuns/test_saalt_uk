{{ 'section-faq.css' | asset_url | stylesheet_tag }}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-faq">
  <div class="section-inner">
    <div class="top-content">
      <h2 class="section-title">{{ section.settings.title }}</h2>
      <div class="section-descr">{{ section.settings.descr }}</div>
    </div>

    {% if section.blocks.size > 0 %}
    <div class="faq-list">
      {% for block in section.blocks %}
      <div class="faq">
        <div class="faq-inner">
          <div class="faq-question">{{ block.settings.question }} <img src="{{ 'arrow_reg.svg' | asset_url }}" alt=""></div>
          <div class="faq-answer">
            <div class="faq-answer-inner">{{ block.settings.answer }}</div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>

<script>
  $('#section-{{ section.id }}').on('click', '.faq-question', function() {
    $(this).parents('.faq').toggleClass('active');
  });
</script>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "descr",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "Faq",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}