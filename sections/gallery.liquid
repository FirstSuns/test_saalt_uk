
<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="gallery">
  <div class="section-inner">
    <h2 class="section-title Heading">{{ section.settings.title }}</h2>
    <div class="section-descr">{{ section.settings.descr }}</div>
    
    {% if section.blocks.size > 0 %}
    <div class="gallery-list">
      {% for block in section.blocks %}
      <div class="gallery">
        <img class="Image--lazyLoad"
          src="{{ block.settings.image | img_url: '1x1' }}"
          data-src="{{ block.settings.image | img_url: 'master' }}"
          alt="{{ block.settings.image.alt | escape }}">
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Galleries",
    "class": "section--galleries",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "descr",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "type": "gallery",
        "name": "Gallery",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "category": "Image",
        "name": "Galleries",
        "settings": {}
      }
    ]
  }
{% endschema %}