{{ 'section-text.css' | asset_url | stylesheet_tag }}

{% style %}
  #section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }
{% endstyle %}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-text">
  <div class="section-inner">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <div class="section-descr">{{ section.settings.descr }}</div>

    {% if section.settings.btn_text != blank %}
    <div class="section-button-wrapper">
      <a href="{{ section.settings.btn_url }}" class="section-btn">{{ section.settings.btn_text }}</a>
    </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Text",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "descr",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FDF6EE"
    }
  ],
  "presets": [
    {
      "name": "Text"
    }
  ]
}
{% endschema %}