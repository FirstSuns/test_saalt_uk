{{ 'section-quiz.css' | asset_url | stylesheet_tag }}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-quiz">
  <div class="section-inner">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <div class="section-descr">{{ section.settings.descr }}</div>

    {% if section.settings.quiz_html != blank %}
    <div class="quiz-wrapper">
      {{ section.settings.quiz_html }}
    </div>
    {% endif %}
  </div>
  
</section>

{% schema %}
{
  "name": "Quiz",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "descr",
      "label": "Description"
    },
    {
      "type": "html",
      "id": "quiz_html",
      "label": "Custom Html"
    }
  ],
  "presets": [
    {
      "name": "Quiz"
    }
  ]
}
{% endschema %}