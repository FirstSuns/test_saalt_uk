<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

{{ 'section-testimonials2.css' | asset_url | stylesheet_tag }}

{% style %}
  #section-{{ section.id }} .section-inner {
    background-color: {{ section.settings.bg_color }};
  }
{% endstyle %}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-testimonials2">
  <div class="section-inner">
    {% if section.blocks.size > 0 %}
    <div class="testimonial-list">
      {% for block in section.blocks %}
      <div class="testimonial">
        <div class="testimonial-inner">
          <div class="testimonial-descr">{{ block.settings.descr }}</div>
          <h3 class="testimonial-image"><img src="{{ block.settings.image | img_url: 'master' }}" alt=""></h3>
        </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>

<script>
  $('#section-{{ section.id }} .testimonial-list').slick({
    dots: true,
    infinite: true,
    speed: 300,
    slidesToShow: 1,
    slidesToScroll: 1,
    mobileFirst: true,
    arrows: false
  });
</script>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#F7D6C5"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "descr",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials 4"
    }
  ]
}
{% endschema %}