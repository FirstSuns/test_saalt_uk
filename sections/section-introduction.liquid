{{ 'section-introduction.css' | asset_url | stylesheet_tag }}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-introduction">
  <div class="section-inner">
    <div class="top-content">
      {% if section.settings.image != blank %}
      <div class="top-image">
        <img class="Image--lazyLoad"
          src="{{ section.settings.image | img_url: '1x1' }}"
          data-src="{{ section.settings.image | img_url: 'master' }}"
          alt="{{ section.settings.image.alt | escape }}">
      </div>
      {% endif %}

      <h2 class="section-title">{{ section.settings.title }}</h2>
      <div class="section-descr">{{ section.settings.description }}</div>
      <div class="section-subtitle">{{ section.settings.subtitle }}</div>
    </div>

    {% if section.blocks.size > 0 %}
    <div class="item-list">
      {% for block in section.blocks %}
      <div class="item">
        <div class="item-inner">
          <div class="item-image">
            <img class="Image--lazyLoad hidden-phone"
              src="{{ block.settings.image | img_url: '1x1' }}"
              data-src="{{ block.settings.image | img_url: 'master' }}"
              alt="{{ block.settings.image.alt | escape }}">
            <img class="Image--lazyLoad hidden-tablet-and-up"
              src="{{ block.settings.image | img_url: '80x' }}"
              data-src="{{ block.settings.image | img_url: '80x' }}"
              alt="{{ block.settings.image.alt | escape }}">
          </div>
          <a href="{{ block.settings.link }}" class="item-title">{{ block.settings.title }}</a>
        </div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Introduction",
    "max_blocks": 4,
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Introduction 2",
        "settings": {}
      }
    ]
  }
{% endschema %}