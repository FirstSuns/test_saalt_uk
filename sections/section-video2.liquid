{{ 'section-video2.css' | asset_url | stylesheet_tag }}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-video2">
  <div class="section-inner">
    <h2 class="section-title">{{ section.settings.title }}</h2>

    <div class="video-wrapper">
      <iframe class="video-iframe" src="{{ section.settings.video_url }}" controls playsinline width="100%" height="100%" frameborder="0">
        <source data-video-type="youtube" type="video/mp4">
      </iframe>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    }
  ],
  "presets": [
    {
      "name": "Video 2"
    }
  ]
}
{% endschema %}