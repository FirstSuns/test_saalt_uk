<script>
  $(document).ready(function(){
    //     $(".new-impact-tabs").tabs();

    $('.tab-image').on('click',function(){
      var uniqueId = $(this).attr('data-atr');
      $('.new-impact-tabs > ul > li').removeClass('activetab');
      $(this).parent('a').parent('li').addClass('activetab');

      $('.tabcontent').each(function(){
        $(this).hide();
        var uid = $(this).attr('atr-d');
        if(uniqueId == uid){
          $(this).show();
        }
        if(uniqueId != uid){
          $(this).hide();
        }

      });
    });
  });
</script>