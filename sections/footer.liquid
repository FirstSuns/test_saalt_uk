    <div class="socket-menu">
      <a href="/pages/terms-of-service">Terms</a>
      <a href="/pages/privacy-policy">Privacy</a>
      <a href="{{ routes.root_url }}" class="Footer__StoreName Heading u-h7 Link Link--secondary">Â© {{ shop.name }}</a>
    </div>
