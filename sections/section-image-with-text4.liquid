{{ 'section-image-with-text4.css' | asset_url | stylesheet_tag }}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-image-with-text4">
  <div class="section-inner">
    <h2 class="section-title">{{ section.settings.title }}</h2>

    <div class="section-image">
      <img src="{{ section.settings.image | img_url: 'master' }}" class="image-desktop" alt="">
      <img src="{{ section.settings.image_mobile | img_url: 'master' }}" class="image-mobile" alt="">
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobie Image"
    }
  ],
  "presets": [
    {
      "name": "Image with text 5"
    }
  ]
}
{% endschema %}