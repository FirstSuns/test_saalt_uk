{{ 'section-banner.css' | asset_url | stylesheet_tag }}

{% style %}
  {% if section.settings.image != blank %}
  #section-{{ section.id }} .banner-main {
    background-image: url({{ section.settings.image | img_url: 'master' }});
  }
  {% endif %}
  #section-{{ section.id }} .section-title {
    color: {{ section.settings.title_color }};
  }
  #section-{{ section.id }} .banner-bottom {
    background-color: {{ section.settings.bg_color }};
  }
  #section-{{ section.id }} .text-block {
    color: {{ section.settings.text_color }};
  }
{% endstyle %}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-banner">
  <div class="banner-inner">
    <div class="banner-main">
      <h2 class="section-title">{{ section.settings.title }}</h2>
    </div>

    {% if section.blocks.size > 0 %}
    <div class="banner-bottom">
      <div class="banner-bottom-inner">
        {% for block in section.blocks %}
        <div class="text-block">{{ block.settings.text }}</div>
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Banner",
  "max_blocks": 3,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#FFF"
    },
    {
      "type": "header",
      "content": "Banner Bottom Settings"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFF"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#5A5F6F"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}
