{{ 'section-icon-banner.css' | asset_url | stylesheet_tag }}

{% style %}
  .section-icon-banner .section-inner {
    background-color: {{ section.settings.bg_color }};
  }
{% endstyle %}

<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" class="section-icon-banner">
  <div class="section-inner">
    {% if section.blocks.size > 0 %}
    <div class="icon-list">
      {% for block in section.blocks %}
      <div class="icon">
        <div class="icon-image">
          <img src="{{ block.settings.image | img_url: '120x' }}" class="icon-desktop" alt="">
          <img src="{{ block.settings.image | img_url: '84x' }}" class="icon-mobile" alt="">
        </div>
        <div class="icon-title">{{ block.settings.title }}</div>
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Icon Banner",
  "max_blocks": 4,
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon Banner"
    }
  ]
}
{% endschema %}
