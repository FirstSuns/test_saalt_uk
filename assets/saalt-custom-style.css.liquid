#atf-content-mobile {
    display:none;
}

#saalt-out {
    width:100vw !important;
}


@media only screen and (max-width:1440px) {
    #atf-content {
 
        width: 75% !important;
   
    }
    #saalt-title-atf {
        width: 100% !important;
    }
    div#saalt-title-atf p {
        width: 50% !important;
        margin: 5px auto;
    }
}

@media only screen and (max-width:1024px) {
    #atf-content-mobile {
        display:none;
    }
    #saalt-loyalty-atf {
        height: 46vh !important;
        background-size: cover;
    
    }
    div#saalt-title-atf p {
        width: 100% !important;
  
    }
    
    #atf-content {
        display: flex;
        padding-left: 50px;
        height:52vh;
        width:95% !important;
        padding:0 !important;
    }

    #saalt-title-atf h1 {
        font-size: 58px !important;
    }


    #saalt-title-atf p {
     
        font-size: 14px !important;
    
    }
    #saalt-title-atf, #saalt-atf-buttons {
        width:100%;
        
    }
    #saalt-atf-buttons .prim-btn, #saalt-atf-buttons .sec-btn {

        width: 15% !important;
   
    }

}
@media only screen and (max-width:768px) { 

    #saalt-atf-buttons .prim-btn, #saalt-atf-buttons .sec-btn {

        width: 23% !important;
   
    }

    #saalt-loyalty-atf {
        height: 40vh !important;
    }
    #atf-content {
        padding:0 !important;
        height:42vh !important;
    }
    #saalt-atf-buttons {
   
        height: 50px;
        
    }
    #saalt-atf-buttons .prim-btn {
        padding: 6px 0;
        font-size: 16px;
     
    }
    #saalt-atf-buttons .sec-btn,#saalt-title-atf p , #saalt-atf-buttons p
     {
        
        font-size: 16px !important;
    }
 
}

@media only screen and (max-width:425px) {
    article#saalt-atf-buttons {
    margin-top: 60px;
}
    #saalt-atf-buttons .prim-btn, #saalt-atf-buttons .sec-btn {

        width: 35% !important;
   
    }
    #saalt-loyalty-atf {
        height: 58vh!important;
        background-size: cover;
        background-position: 55%;
    }

    article#saalt-atf-buttons {
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top:40px !important;
    }
    
    #saalt-title-atf h1 {
        font-size: 50px !important;
    }
    #saalt-atf-buttons .prim-btn, #saalt-atf-buttons .sec-btn,#saalt-title-atf p , #saalt-atf-buttons p
     {
        
        font-size: 14px !important;
    }
    #saalt-atf-buttons .prim-btn {
        margin-top:10px;
        padding:12px 0;
    }

    #atf-content {
        display: flex;
        width: 80%;
        flex-flow: column;
        justify-content: flex-end;
        padding-left: 0px;
        align-items: center;
        margin: auto;
        height: 45% !important;
        padding: 20 !important;
    }
}
@media only screen and (max-width:320px) {

    #saalt-loyalty-atf {
        height: 45vh!important;
        background-size: cover;
        background-position: 53%;
    }
