@font-face {
    font-family: beausite-grand;
    src: url(https://yotpo-stool.s3.amazonaws.com/images/fonts/BeausiteGrand-Regular-Web.ttf);
  }
  @font-face {
    font-family: gotham-book;
    src: url(https://yotpo-stool.s3.amazonaws.com/images/fonts/Gotham%20Family/Gotham-Book.otf);
  }
  @font-face {
    font-family: gotham-bold;
    src: url(https://yotpo-stool.s3.amazonaws.com/images/fonts/Gotham%20Family/Gotham%20Bold.otf);
  }

  div#redeem-bg {
    background-color: #FBEEDF !important;

}
div#activity-bg {
    background-image: url({{'activity-bg.jpg' | assset_url }});
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    padding: 0px 0;
}


#saalt-loyalty-atf{
    height: 75vh;
    background-image: url({{'saalt-atf-banner.png' | assset_url }});
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    /* width: 100vw;
    position: relative;
    left: calc(-50vw + 50%); */
    
}
#atf-content {
    display: flex;
    width: 55%;
    height: 75%;
    flex-flow: column;
    justify-content: center;
    padding-top: 300px;
    text-align: center;
    align-items: center;
    margin: 0 auto;
}
#saalt-title-atf, #saalt-atf-buttons {
    width:50%;
    
}

#saalt-title-atf h1 {
    font-size: 79px !important;
    color: #3F4759;
    font-weight: normal;
    font-family: "beausite-grand";
    margin: 0px;
}

#saalt-title-atf p {
    color: #3F4759;
    font-size:16px;
    margin-bottom: 35px;
    font-family: 'gotham-book';
}

div#saalt-logo {
    margin-bottom: -55px;
    position: relative;
    z-index: 1;
    margin-left: 20px;
}

button {
    background: none;
    border: none;
    padding:0;
    
}

button:hover,button:focus {

        background: none;
        border: none;
        padding:0;
        cursor: pointer;
        

}
#saalt-atf-buttons {
    display: flex;
    height: 50px;
    justify-content: center;
    width:40%;
}
#saalt-atf-buttons .prim-btn,#saalt-atf-buttons .sec-btn {
    padding: 12px 0;
    background-color: #fff;
    border: none;
    color:#363636;
    margin-right: 10px;
    text-decoration: none;
    width: 35%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 100px;
    font-size: 15px;
    font-family: 'gotham-bold';

}

